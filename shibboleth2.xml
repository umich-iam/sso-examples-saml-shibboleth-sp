<SPConfig
  xmlns="urn:mace:shibboleth:3.0:native:sp:config"
  xmlns:conf="urn:mace:shibboleth:3.0:native:sp:config"
  clockSkew="180">

  <ApplicationDefaults
    entityID="https://CHANGEME.umich.edu/"
    REMOTE_USER="umichPrincipalName uid eppn"
    cipherSuites="DEFAULT:!EXP:!LOW:!aNULL:!eNULL:!DES:!IDEA:!SEED:!RC4:!3DES:!kRSA:!SSLv2:!SSLv3:!TLSv1:!TLSv1.1">>

    <Sessions
      lifetime="28800"
      timeout="3600"
      relayState="ss:mem"
      checkAddress="false"
      handlerSSL="true"
      cookieProps="https">

      <!-- production IdP -->
      <!--
      <SSO entityID="https://shibboleth.umich.edu/idp/shibboleth">SAML2</SSO>
      -->

      <!-- UAT IdP -->
      <!--
      <SSO entityID="https://shib-sp-test.www.umich.edu/idp/shibboleth">SAML2</SSO>
      -->

      <Logout>Local</Logout>

      <Handler type="MetadataGenerator" Location="/Metadata" signing="false"/>

      <Handler type="Status" Location="/Status" acl="127.0.0.1 ::1"/>

      <Handler type="Session" Location="/Session" showAttributeValues="false"/>

    </Sessions>

    <Errors
      supportContact="admin@CHANGEME.umich.edu"
      helpLocation="/about.html"
      styleSheet="/shibboleth-sp/main.css"/>

    <!-- production IdP -->
    <!--
    <MetadataProvider
      type="XML"
      uri="https://shibboleth.umich.edu/md/umich-prod-idps.xml"
      backingFilePath="/var/cache/shibboleth/umich-prod-idps.xml"
      reloadInterval="7200">
      <MetadataFilter
        type="Signature"
        certificate="umich-md-sign.pem"/>
    </MetadataProvider>
    -->

    <!-- UAT IdP -->
    <!--
    <MetadataProvider
      type="XML"
      uri="https://shibboleth.umich.edu/md/umich-nonprod-idps.xml"
      backingFilePath="/var/cache/shibboleth/umich-nonprod-idps.xml"
      reloadInterval="7200">
      <MetadataFilter
        type="Signature"
        certificate="umich-md-sign.pem"/>
    </MetadataProvider>
    -->

    <AttributeExtractor
       type="XML"
       validate="true"
       reloadChanges="false"
       path="attribute-map.xml"/>

    <AttributeFilter
       type="XML"
       validate="true"
       path="attribute-policy.xml"/>

    <CredentialResolver
       type="File"
       use="signing"
       key="sp-signing-key.pem"
       certificate="sp-signing-cert.pem"/>

    <CredentialResolver
       type="File"
       use="encryption"
       key="sp-encrypt-key.pem"
       certificate="sp-encrypt-cert.pem"/>

  </ApplicationDefaults>

  <SecurityPolicyProvider
     type="XML"
     validate="true"
     path="security-policy.xml"/>

  <ProtocolProvider
     type="XML"
     validate="true"
     reloadChanges="false"
     path="protocols.xml"/>

</SPConfig>
